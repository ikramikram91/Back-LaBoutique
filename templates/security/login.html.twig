{% extends 'base.html.twig' %}

           
{% block body %}

            {% for messages in app.flashes('messages') %}
			
			<div class= " p-3 mb-2 bg-secondary " > <h1 style="text-align:center; color: white" >{{messages}}</h1></div>
			{% endfor %}



<div class= "container">
<form method="post">

    {% if app.user %}
        <div class="mb-3">
            <p>Vous êtes connecter en tant que {{ app.user.username }} </p>
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal" style="color:black">Veuilley vous connecter</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
   

    <button class="btn btn-lg btn-primary" type="submit">
        se connecter
    </button>
    
</form>
<br>
    <a  class="btn btn-primary" href="{{ path('app_register')}}"> s'inscrire </a>
{# lien du resete de password #}
    <p><a href="{{ path( 'app_forgot_password_request') }}"> mots de passe oublier</a></p>

</div>
{% endblock %}